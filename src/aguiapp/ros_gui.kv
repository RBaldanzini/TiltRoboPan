FloatLayout:

    MDLabel:
        id: first_topic
        text: "Hello World"
        halign: "center"
        size_hint: .5, .5
        pos_hint: {"center_x": .25, "center_y": .8}

    MDRaisedButton:
        text: "MDRAISEDBUTTON"
        size_hint: .25, .15
        pos_hint: {"center_x": .5, "center_y": .8}
        on_press: app.func(*args)

    MDRaisedButton:
        text: "Forward"
        size_hint: .25, .15
        value1: 0.1
        pos_hint: {"center_x": .5, "center_y": .5}
        on_press: app.direction_function(self.value1)

    MDSlider:
        min: -90
        max: 90
        value: 0
        hint: True
        pos_hint: {"center_x": .5, "center_y": .2}
        on_touch_move: app.slider_func(self.value)

